<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- The default pattern: Date Priority [Category] Message\n -->
			<param name="ConversionPattern" value="%m%n" />
		</layout>
	</appender>

	<appender name="FILE" class="org.apache.log4j.RollingFileAppender">
		<errorHandler class="org.apache.log4j.helpers.OnlyOnceErrorHandler" />
		<param name="File" value="${tas.home}/tmp/debug/client/${tas.log.type}.log" />
		<param name="Append" value="true" />
		<param name="MaxFileSize" value="10MB" />
		<param name="MaxBackupIndex" value="10" />
		<param name="Encoding" value="UTF8" />

		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{MM/dd HH:mm:ss}] %t %-5p %-20.20c{3} : %m%n" />
		</layout>
	</appender>

	<category name="org.apache.tools.ant.Project">
		<priority value="INFO" />
	</category>
	<category name="org.apache.tools.ant.Target">
		<priority value="INFO" />
	</category>
	<category name="org.apache.tools.ant.taskdefs">
		<priority value="INFO" />
	</category>
	<category name="org.apache.tools.ant.taskdefs.Echo">
		<priority value="INFO" />
	</category>
	<category name="org.apache.tools.ant.taskdefs.ExecTask">
        <priority value="INFO" />
    </category>
    <category name="com.truetel">
        <priority value="INFO" />
    </category>

	<root>
		<level value="INFO" />
		<appender-ref ref="FILE" />
		<!--  appender-ref ref="CONSOLE" /-->
	</root>
</log4j:configuration>